<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circle_seekbar="http://schemas.android.com/apk/res-auto"
    android:background="@color/cornflowerblue"
    tools:context="com.example.david.dontouch.Activity.CountTimeDownActivity">

    <com.example.david.dontouch.View.CircleSeekBar
        android:id="@+id/circle_seekbar"
        android:background="@drawable/angel"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:thumb="@drawable/thumb"
        circle_seekbar:progress_background="@color/login_normal"
        circle_seekbar:progress_front="@color/cornflowerblue"
        circle_seekbar:progress_max="120"
        circle_seekbar:progress_text_color="@color/tab_enable"
        circle_seekbar:progress_text_size="100dp"
        circle_seekbar:progress_text_stroke_width="4dp"
        circle_seekbar:progress_width="10dp"
        circle_seekbar:show_progress_text="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/bAddOne"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:background="@color/tab_unchecked"
        android:text="开始"
        android:textColor="@color/tab_enable"
        android:layout_width="250sp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:id="@+id/bAddOne"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@color/tab_unchecked"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="57dp"
            android:layout_height="61dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/angel1"
            android:layout_weight="0.02" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginEnd="81dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="0.02"
            android:background="@drawable/angel1" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:text="关屏挑战"
        android:gravity="center_horizontal"
        android:textColor="@color/tab_enable"
        android:layout_marginLeft="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/angel1"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp" />

</RelativeLayout>
