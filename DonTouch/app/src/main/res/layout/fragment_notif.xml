<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.dontouch.Fragment.NotifFragment">
    <RelativeLayout
        android:id="@+id/notif_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.david.dontouch.View.NotifProgressView
            android:id="@+id/notif_progress"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            tc:radius="100dip"
            tc:strokeWidth="20dip"
            tc:circleColor="@color/gray"
            tc:ringColor="@color/ring_color"/>


        <ListView
            android:id="@+id/notif_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:headerDividersEnabled="false"
            android:dividerHeight="2dp"
            android:footerDividersEnabled="false"
            android:layout_below="@+id/notif_progress"
            android:layout_above="@+id/notif_button"
            android:layout_centerHorizontal="true"
            >
        </ListView>

        <Button
            android:id="@+id/notif_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关屏挑战"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</FrameLayout>
