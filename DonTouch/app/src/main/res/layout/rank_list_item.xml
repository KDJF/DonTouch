<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rank_id"
        android:layout_width="20dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:gravity="center"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rank_icon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_toRightOf="@+id/rank_id"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:layout_toRightOf="@+id/rank_icon"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/rank_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000毫秒"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/contain_likes" />

    <LinearLayout
        android:id="@+id/contain_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/likes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/likes_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like_off"
            android:background="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>
